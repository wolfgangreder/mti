<installation version="1.0">
  <info>
   <appname>MTI</appname>
    <appversion>2010</appversion>
    <appsubpath>mti/mti</appsubpath>
    <url>http://www.motriv.at</url>
    <authors>
      <author name="Wolfgang Reder" email="w.reder@motriv.at"/>
    </authors>
    <uninstaller/>
    <javaversion>1.6</javaversion>
    <pack2000/>
    <!--run-privileged/-->
  </info>
  <variables>

  </variables>
  <guiprefs resizable="no" width="800" height="600">
  </guiprefs>
  <panels>
    <!--panel classname="HelloPanel"/-->
    <panel classname="TargetPanel"/>
    <!--panel classname="ShortcutPanel"/-->
    <panel classname="InstallPanel"/>
    <panel classname="FinishPanel"/>
  </panels>
  <locale>
    <langpack iso3="deu"/>
  </locale>
  <packs>
    <pack name="Base" required="yes" preselected="yes" id="base">
      <depends packname="mti"/>
      <description></description>
    </pack>
    <pack name="mti" required="yes" preselected="yes" id="mti" hidden="yes" >
      <depends packname="dataprovider"/>
      <depends packname="platform11"/>
      <depends packname="visual"/>
      <file src="bin" targetdir="$INSTALL_PATH" override="update"/>
      <file src="mti" targetdir="$INSTALL_PATH" override="update"/>
      <file src="etc" targetdir="$INSTALL_PATH" override="update"/>
      <executable targetfile="$INSTALL_PATH/bin/mti" stage="never"/>
      <description></description>
    </pack>
    <pack name="dataprovider" required="no" preselected="yes" id="dataprovider" hidden="yes">
      <depends packname="platform11"/>
      <file src="dataprovider" targetdir="$INSTALL_PATH" override="update"/>
      <description></description>
    </pack>
    <pack name="visual" required="no" preselected="yes" id="visual" hidden="yes">
      <depends packname="dataprovider"/>
      <depends packname="platform11"/>
      <file src="visual" targetdir="$INSTALL_PATH" override="update"/>
      <description></description>
    </pack>
    <pack name="platform11" required="no" preselected="yes" id="platform11" hidden="yes">
      <file src="platform11" targetdir="$INSTALL_PATH" override="update"/>
      <description></description>
    </pack>
  </packs>
</installation>
